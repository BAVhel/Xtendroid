<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="enabled"
        android:summaryOff="Disabled"
        android:summaryOn="Enabled"
        android:title="Enable something" />

    <EditTextPreference
        android:dependency="enabled"
        android:key="url"
        android:title="Some URL" />

    <EditTextPreference
        android:dependency="enabled"
        android:key="max_timeout"
        android:title="Max timeout" />
</PreferenceScreen>